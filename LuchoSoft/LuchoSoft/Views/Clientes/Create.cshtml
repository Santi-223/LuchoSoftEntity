@model LuchoSoft.Models.Cliente
@{
    ViewData["Title"] = "Create";
}

<head>
    <script src="https://kit.fontawesome.com/49fd18fbe7.js" crossorigin="anonymous"></script>
</head>
<div style="text-align: center">
    <h1>Registrar cliente</h1>

    <h4>Cliente</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4" style="margin-right: -34%; margin-left:34%">
        <form asp-action="Create" style="text-align: center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div style="display:flex; text-align:center">
                    <i class="bi bi-key-fill" style="color: red"></i>
                    <label class="control-label">ID del cliente</label>
                </div>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div style="display:flex; text-align:center">
                    <i class="bi bi-person" style="color: red"></i>
                    <label class="control-label">Nombre del cliente</label>
                </div>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div style="display:flex; text-align:center">
                    <i class="bi bi-telephone-fill" style="color: red"></i>
                    <label class="control-label">Teléfono</label>
                </div>
                <input asp-for="TelefonoCliente" class="form-control" />
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div style="display:flex; text-align:center">
                    <i class="bi bi-map-fill" style="color: red"></i>
                    <label class="control-label">Dirección</label>
                </div>
                <input asp-for="DireccionCliente" class="form-control" />
                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cliente frecuente</label>
                <select asp-for="ClienteFrecuente" class="form-select" aria-label="Default select example" style="text-align: center">
                    <option value="0">No</option>
                    <option value="1">Si</option>
                </select>
                <span asp-validation-for="ClienteFrecuente" class="text-danger"></span>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group" style="display: flex;">
                <input type="submit" value="Crear" style="background: #48110d; border: none; border-radius: 3px; color: white; width: 100px; height: 40px; margin-left: 30px;" />
                <button type="submit" style="background: #48110d; border: none; border-radius: 3px; color: white; width: 100px; height: 40px; margin-left: 100px"><a asp-action="Index" style="text-decoration: none; color: white">Cancelar</a></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
