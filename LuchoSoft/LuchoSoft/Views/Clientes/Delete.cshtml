@model LuchoSoft.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div id="deletee">
    <h1 style="display: flex; justify-content:center;">Eliminar</h1>

    <h3 style="display: flex; justify-content:center;">¿Estás sefuro que desea eliminar el cliente?</h3>
    <div style="align-items: center;">
        <h4 style="display: flex; justify-content:center;">Cliente</h4>
        <hr />
        <dl class="row" style="display:block; justify-content:center; margin-left:350px">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TelefonoCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TelefonoCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DireccionCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DireccionCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClienteFrecuente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClienteFrecuente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstadoCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EstadoCliente)
            </dd>
        </dl>

        <form asp-action="Delete" style="margin-left:380px">
            <input type="hidden" asp-for="IdCliente" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <button class="btn btn-success"><a asp-action="Index">Cerrar</a></button>
        </form>
    </div>
</div>
