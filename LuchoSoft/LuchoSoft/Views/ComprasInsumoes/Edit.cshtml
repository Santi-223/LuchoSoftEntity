@model LuchoSoft.Models.ComprasInsumo

@{
    ViewData["Title"] = "Edit";
}

<script src="https://kit.fontawesome.com/3699f31e0a.js" crossorigin="anonymous"></script>

<style>
    body {
        min-height: 100vh;
        margin: 0;
    }

    #Formulario {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 1500px;
        width: 100%;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 30px;
        margin-left: 20px;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            margin-bottom: 5px;
        }

    #formularioRecuadro {
        border: 2px solid #9c9c9c;
        padding: 5px;
        border-radius: 10px;
        background-color: #dee3df;
    }
</style>

<h1 class="text-center">Editar</h1>

<hr />
<div id="formularioRecuadro">
    <div id="Formulario" class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdComprasInsumos" />

                <div class="form-group">
                    <i class="fa-solid fa-boxes" style="color: #e12424;"></i>
                    <label asp-for="CantidadInsumoComprasInsumos" class="control-label"></label>
                    <input asp-for="CantidadInsumoComprasInsumos" class="form-control" />
                    <span asp-validation-for="CantidadInsumoComprasInsumos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <i class="fa-solid fa-money-bill" style="color: #e12424;"></i>
                    <label asp-for="PrecioInsumoComprasInsumos" class="control-label"></label>
                    <input asp-for="PrecioInsumoComprasInsumos" class="form-control" />
                    <span asp-validation-for="PrecioInsumoComprasInsumos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <i class="fa-solid fa-bolt" style="color: #e12424;"></i>
                    <label asp-for="IdCompraComprasInsumos" class="control-label"></label>
                    <select asp-for="IdCompraComprasInsumos" class="form-control" asp-items="ViewBag.IdCompraComprasInsumos"></select>
                    <span asp-validation-for="IdCompraComprasInsumos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <i class="fa-solid fa-bolt" style="color: #e12424;"></i>
                    <label asp-for="IdInsumoComprasInsumos" class="control-label"></label>
                    <select asp-for="IdInsumoComprasInsumos" class="form-control" asp-items="ViewBag.IdInsumoComprasInsumos"></select>
                    <span asp-validation-for="IdInsumoComprasInsumos" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-around">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: #48110d; font-size: 18px; width: 100px;" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger" style="background-color: #e12424; font-size: 18px; width: 100px;">Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
