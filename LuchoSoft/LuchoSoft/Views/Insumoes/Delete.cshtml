@model LuchoSoft.Models.Insumo

@{
    ViewData["Title"] = "Eliminar";
}

<style>
    body {
        min-height: 100vh;
        margin: 0;
    }

    h1, h3, h4 {
        text-align: center;
    }

    h3 {
        margin-top: 20px;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 2px solid #9c9c9c;
        border-radius: 10px;
        background-color: #dee3df;
    }

    .delete-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .delete-header h1 {
            margin-bottom: 10px;
        }

    .delete-message {
        text-align: center;
        margin-bottom: 30px;
    }

    .delete-details {
        padding: 20px;
        border: 2px solid #9c9c9c;
        border-radius: 10px;
        background-color: #fff;
    }

        .delete-details dl {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 10px;
        }

        .delete-details dt {
            font-weight: bold;
        }

    .delete-actions {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .delete-actions .btn-danger {
            margin-right: 10px;
            background-color: #e12424;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

            .delete-actions .btn-danger:hover {
                background-color: #ff3c3c;
            }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #808080;
        }
</style>

<div class="container">
    <div class="delete-header">
        <h1>Eliminar</h1>
    </div>

    <div class="delete-message">
        <h3>¿Estás seguro de eliminar esto?</h3>
    </div>

    <div class="delete-details">
        <h4>Insumo</h4>
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.ImagenInsumo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImagenInsumo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NombreInsumo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreInsumo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UnidadesDeMedidaInsumo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UnidadesDeMedidaInsumo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StockInsumo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StockInsumo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.EstadoInsumo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EstadoInsumo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IdCategoriaInsumoInsumosNavigation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdCategoriaInsumoInsumosNavigation.IdCategoriaInsumos)
            </dd>
        </dl>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdInsumo" />
            <div class="d-flex justify-content-around">
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-primary" style="background-color: #48110d; font-size: 18px; width: 100px;" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-danger" style="background-color: #e12424; font-size: 18px; width: 100px;">Volver</a>
                </div>
            </div>
        </form>

    </div>
</div>
