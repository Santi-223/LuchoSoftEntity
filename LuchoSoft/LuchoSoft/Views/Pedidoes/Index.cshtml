@model IEnumerable<LuchoSoft.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; margin-bottom:40px">Pedidos</h1>

<p style="display:flex; justify-content:end; margin-bottom:-30px">
    <a asp-action="Create" class="btn btn-danger" style="border-radius: 20px">Registrar un nuevo pedido</a>
</p>
<table class="table" id="pedidos-table" style="width: 100px; padding:10px; margin-left:-113px; margin-right:100px">
    <thead>
        <tr>
            <th style="width: 30px">
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th style="width: 10px">
                @Html.DisplayNameFor(model => model.EstadoPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClientePedidosNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoPedidosNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClientePedidosNavigation.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoPedidosNavigation.IdEmpleado)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPedido"><i class="fas fa-edit edit-icon" style="color:#FF9900;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdPedido"><i class="fa-solid fa-circle-info" style="color:green;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdPedido"><i class="fa-solid fa-trash" style="color:red"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts{
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#pedidos-table').DataTable({
                "paging": true,
                "lengthMenu": [5, 10, 25, 50], // Opciones de cantidad por página
                "pageLength": 5, // Cantidad por página inicial
                "language": {
                    "search": "",
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas en total)",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
                // Otras configuraciones de DataTables
            });

            // Ajustar el ancho del buscador
            $('.dataTables_filter input[type="search"]').css('width', '500px');
            $('.dataTables_filter input[type="search"]').css('border-radius', '20px');
            $('.dataTables_filter input[type="search"]').css('border', '1px solid')

            var filterInput = $('.dataTables_filter input[type="search"]');
            var lengthMenuContainer = $('.dataTables_length');

            // Crear un nuevo contenedor para la barra de búsqueda y los botones
            var newContainer = $('<div class="custom-filter-container"></div>');

            // Agregar la barra de búsqueda al nuevo contenedor
            newContainer.append(filterInput);

            // Insertar el nuevo contenedor antes del contenedor original de la barra de búsqueda
            lengthMenuContainer.before(newContainer);

        });
        

    </script>
}
