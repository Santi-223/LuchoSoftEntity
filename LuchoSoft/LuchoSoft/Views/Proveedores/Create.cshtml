@model LuchoSoft.Models.Proveedore

@{
    ViewData["Title"] = "Create";
}

<script src="https://kit.fontawesome.com/3699f31e0a.js" crossorigin="anonymous"></script>

<style>
    body {
        min-height: 100vh;
        margin: 0;
    }

    #Formulario {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 1500px;
        width: 100%;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 30px;
        margin-left: 20px;
    }

    #formularioRecuadro {
        border: 2px solid #9c9c9c;
        padding: 5px;
        border-radius: 10px;
        background-color: #dee3df;
    }
</style>

<h1 class="text-center">Crear Proveedor</h1>
<hr />
<div id="formularioRecuadro">
    <div id="Formulario" class="row">
        <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <i class="fa-solid fa-bolt" style="color: #e12424;"></i>
                <label asp-for="IdProveedor" class="control-label"></label>
                <input asp-for="IdProveedor" class="form-control" />
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <i class="fa-solid fa-user" style="color: #e12424;"></i>
                <label asp-for="NombreProveedor" class="control-label"></label>
                <input asp-for="NombreProveedor" class="form-control" />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <i class="fa-solid fa-phone" style="color: #e12424;"></i>
                <label asp-for="TelefonoProveedor" class="control-label"></label>
                <input asp-for="TelefonoProveedor" class="form-control" />
                <span asp-validation-for="TelefonoProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <i class="fa-solid fa-home" style="color: #e12424;"></i>
                <label asp-for="DireccionProveedor" class="control-label"></label>
                <input asp-for="DireccionProveedor" class="form-control" />
                <span asp-validation-for="DireccionProveedor" class="text-danger"></span>
            </div>
                <div class="d-flex justify-content-around">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: #48110d; font-size: 18px; width: 100px;" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger" style="background-color: #e12424; font-size: 18px; width: 100px;">Volver</a>
                    </div>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
