@model LuchoSoft.Models.Proveedore

@{
    ViewData["Title"] = "Edit";
}

<script src="https://kit.fontawesome.com/3699f31e0a.js" crossorigin="anonymous"></script>

<style>
    body {
        min-height: 100vh;
        margin: 0;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 2px solid #9c9c9c;
        border-radius: 10px;
        background-color: #dee3df;
    }

    .edit-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .edit-header h1 {
            margin-bottom: 10px;
        }

    .edit-form {
        padding: 20px;
        border: 2px solid #9c9c9c;
        border-radius: 10px;
        background-color: #fff;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

    .btn-primary {
        background-color: #48110d;
        font-size: 18px;
        width: 100px;
    }
</style>

<div class="container">
    <div class="edit-header">
        <h1>Editar</h1>
    </div>

    <div class="edit-form">
        <h4>Proveedores</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProveedor" />
            <div class="form-group">
                <i class="fa-solid fa-signature" style="color: #e12424;"></i>
                <label asp-for="NombreProveedor" class="control-label"></label>
                <input asp-for="NombreProveedor" class="form-control" />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-phone" style="color: #e12424;"></i>
                <label asp-for="TelefonoProveedor" class="control-label"></label>
                <input asp-for="TelefonoProveedor" class="form-control" />
                <span asp-validation-for="TelefonoProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-home" style="color: #e12424;"></i>
                <label asp-for="DireccionProveedor" class="control-label"></label>
                <input asp-for="DireccionProveedor" class="form-control" />
                <span asp-validation-for="DireccionProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-store" style="color: #e12424;"></i>
                <label asp-for="EstadoProveedor" class="control-label"></label>
                <input asp-for="EstadoProveedor" class="form-control" />
                <span asp-validation-for="EstadoProveedor" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-around">
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: #48110d; font-size: 18px; width: 100px;" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-danger" style="background-color: #e12424; font-size: 18px; width: 100px;">Volver</a>
                </div>
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
